#!/usr/bin/env bash

function tmux-switch-or-create() {
  [[ -n "$TMUX" ]] && change="switch-client" || change="attach-session"
  if [ "$1" ]; then
    tmux $change -t "$1" 2>/dev/null || (tmux new-session -d -s "$1" && tmux $change -t "$1"); return
  fi
  session=$(tmux list-sessions -F "#{session_name}" 2>/dev/null | fzf -1 -0 --preview "") &&  tmux $change -t "$session" || echo "No sessions found."
}

tmux-switch-or-create "$@"
