#!/usr/bin/env bash

function error(){
  red="\e[1;31m"
  reset="\e[0m"
  printf "${red}%s${reset}\n" "$1" >&2
}

for cmd in $( rg --glob='neovim-*' --files --follow --max-depth=1 )
do
  if [ "$cmd" = "neovim-$1" ]; then
    command=$cmd
    shift
		break
  fi
done

if [ -n "$command" ]; then
  $command "$@"
else
  error "Unknown command: neovim-$1"
fi
