#!/usr/bin/env bash

# This is the default configuration for git-delta.
# The colors are the base16 variants with 15% alpha and 45% alpha for emph.
delta \
				--highlight-removed \
				--keep-plus-minus-markers \
				--max-line-distance 1 \
				--plus-color="#39423E" \
				--plus-emph-color="#597052" \
				--minus-color="#44353E" \
				--minus-emph-color="#7A4951" \
				"$@"
