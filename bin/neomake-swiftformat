#!/usr/bin/env bash

# shellcheck source=../scripts/files.sh
source "$DOTFILES/scripts/files.sh"

# File is only to find the correct config.
FILE="$1"
filename='.swiftformat'

CONFIG=$(get_config_file "$filename" "$FILE")

if [ -f "$CONFIG" ]
then
	swiftformat --quiet --config "$CONFIG"
else
	swiftformat --quiet
fi
