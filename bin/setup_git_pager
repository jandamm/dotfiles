#!/bin/bash

if hash delta 2>/dev/null
then
	git config --global core.pager 'delta --theme=OneHalfDark  --plus-color="#012800" --minus-color="#340001" --file-style underline --hunk-style plain'
	echo "Setup delta as git pager"
else
	git config --global core.pager "diff-so-fancy | less --tabs=4 -RFX"
	git config --bool --global diff-so-fancy.markEmptyLines false
	git config --bool --global diff-so-fancy.stripLeadingSymbols false
	echo "Setup diff-so-fancy as git pager"
fi
git config --global color.diff.meta "blue"
git config --global color.diff.frag "yellow bold"
