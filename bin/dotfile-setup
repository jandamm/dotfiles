#!/usr/bin/env bash
# vim:set foldmethod=marker:

if [ -z "$DOTFILES" ]
then
	echo "Not yet set up. Sourcing zshenv"
	# shellcheck source=../zshenv
	source "$(pwd)/${0%/*}/../zshenv"
fi

while [[ -n "$1" ]]
do
	echo $1
	
done
echo "Not yet impletemented"
exit 1

# install Brewfile
brew bundle install --global

# install Gemfile
bundle install
# bundle update if update

# install pips
# -U -> Update if available
# pip3 install -U -r pip-requirements.txt

# rcup

# TMUX {{{

# install tmux terminal
# git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
# ~/.tmux/plugins/tpm/bin/install_plugins
# ~/.tmux/plugins/tpm/bin/update_plugins all

# }}}

# ALACRITTY {{{

# Set font rendering for non retina
# defaults write -g CGFontRenderingFontSmoothingDisabled -bool NO

# }}}

# ZSH {{{

# rezsh
# zinit update

# }}}

# NVIM {{{

# install plugins
# nvim -u plugins.vim +PlugInstall +qa
# nvim -u plugins.vim +PlugUpgrade +PlugUpdate +qa
for file in "$DOTFILES/vim/spell/"*.add
do
	nvim "+mkspell! $file" +qa
done

# }}}

# BAT {{{

# recompile with theme
# after rcup

# update: download theme again
# recompile with theme

# }}}

# rcup
