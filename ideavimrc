set surround

set incsearch
set ignorecase
set smartcase
set relativenumber

set clipboard=unnamed " copy to the system clipboard

nmap ]<Space> o<esc>k
nmap [<Space> O<esc>j

nmap Y y$

inoremap <C-u> <ESC>cc

nnoremap U <C-r>
xmap s :s/

nmap gcc :action CommentByLineComment<CR>
xmap gc :action CommentByLineComment<CR>

nmap <Space>f :action ReformatCode<CR>
xmap <Space>f :action ReformatCode<CR>
